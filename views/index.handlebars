<div class="container">

  <div class="row text-center">
    <img class="img-fluid img-thumbnail mx-auto d-block" src="/assets/image/burger.jpeg">
  </div>
  <hr>
  <div class="row">
    <div class="col-md-7 new-burger">
      <h2>Burger To Devour</h2>

      <ul>
        {{#each burger}}
        {{#unless devour}}
        {{> burger/burger-block devour=true}}
        {{/unless}}
        {{/each}}
      </ul>

    </div>
    <div class="col-md-5 eaten-burger">
      <h2>Burger Devoured</h2>

      <ul>
        {{#each burger}}
        {{#if devour}}
        {{> burger/burger-block devour=false}}
        {{/if}}
        {{/each}}
      </ul>


    </div>
  </div>
  <br>
  <br>
  <div class="row text-center">
    <div class="col-md-12">
      <form class="create-form">
        <h2>Add a Burger</h2>
        <hr>
        <div class="form-group">
          <label for="burger">Name:</label>
          <input type="text" id="burger" name="name">
        </div>
        <button type="submit">Add a Burger</button>
      </form>
    </div>

  </div>

</div>